@model SimuladorTienda.Models.tbproducto

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Editar</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.idp)
    <hr />
    <div class="form-group">
        <div class="col-md-4">
            <label for="nombre">Categoría</label>
            @Html.DropDownList("idcate", null, htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.idcate, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-4">
            <label for="nombre">Nombre de producto</label>
            @Html.EditorFor(model => model.nombre, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.nombre, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-4">
            <label for="nombre">Costo</label>
            <input class="form-control text-box single-line" data-val="true" pattern="[0-9]+(,[0-9]{2})?" data-val-required="El campo costo es obligatorio." id="costo" name="costo" type="text" value="@Model.costo" />
            @Html.ValidationMessageFor(model => model.costo, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-4">
            <label for="nombre">Precio</label>
            <input class="form-control text-box single-line" data-val="true" pattern="[0-9]+(,[0-9]{2})?" data-val-required="El campo precio es obligatorio." id="precio" name="precio" type="text" value="@Model.precio" />
            @Html.ValidationMessageFor(model => model.precio, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-4">
            <label for="nombre">Preferencia</label>
            @Html.EditorFor(model => model.preferencia, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.preferencia, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-4">
            <div class="row">
                <div class="col-md-6 text-center">
                    <input type="submit" value="Guardar" class="btn btn-primary btn-block" />
                </div>
                <div class="col-md-6 text-center">
                    <a href="@Url.Action("Index")" class="btn btn-warning btn-block">
                        Cancelar
                    </a>
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
