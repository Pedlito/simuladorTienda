@model SimuladorTienda.Models.tbproducto

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>¿Realmente quieres eliminar este producto?</h3>
<div>
    <hr />
    <dl class="dl-horizontal col-md-4">
        <dt>
            <label>Nombre del producto</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.nombre)
        </dd>

        <dt>
            <label>Categoría</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.tbcategoria.nombre)
        </dd>

        <dt>
            <label>Costo</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.costo)
        </dd>

        <dt>
            <label>Precio</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.precio)
        </dd>

        <dt>
            <label>Preferencia</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.preferencia)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

    <div class="form-group">
        <div class="col-md-4">
            <div class="row">
                <div class="col-md-6 text-center">
                    <input type="submit" value="Eliminar" class="btn btn-danger btn-block" />
                </div>
                <div class="col-md-6 text-center">
                    <a href="@Url.Action("Index")" class="btn btn-warning btn-block">
                        Cancelar
                    </a>
                </div>
            </div>
        </div>
    </div>
    }
</div>
