@model SimuladorTienda.Models.tbcategoria

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h3>¿Realmente quieres eliminar esta categoría?</h3>
<div>
    <hr />
    <dl class="dl-horizontal col-md-4">
        <dt>
            <label>Nombre de categoría</label>
        </dt>

        <dd>
            @Html.DisplayFor(model => model.nombre)
        </dd>

        <dt>
            <label>Estado</label>
        </dt>

        <dd>
            @((Model.estado) ? "Activo" : "Inactivo")
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-group">
            <div class="col-md-4">
                <div class="row">
                    <div class="col-md-6 text-center">
                        <input type="submit" value="Eliminar" class="btn btn-danger btn-block" />
                    </div>
                    <div class="col-md-6 text-center">
                        <a href="@Url.Action("Index")" class="btn btn-warning btn-block">
                            Cancelar
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
