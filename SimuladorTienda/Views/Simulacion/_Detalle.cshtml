@model SimuladorTienda.Models.Venta
@using SimuladorTienda.Models;

<div class="container">
    <table class="table">
        <tr>
            <th>
                Producto
            </th>
            <th>
                Costo
            </th>
            <th>
                Precio
            </th>
            <th>
                Utilidad
            </th>
            <th>
                Cantidad
            </th>
            <th>
                Total
            </th>
        </tr>

        @foreach (DetalleVenta item in Model.detalle)
        {
            <tr>
                <td>
                    @item.producto.nombre
                </td>
                <td>
                    Q @item.producto.costo
                </td>
                <td>
                    Q @item.producto.precio
                </td>
                <td>
                    Q @item.getUtilidad()
                </td>
                <td>
                    @item.cantidad
                </td>
                <td>
                    Q @(item.getUtilidad() * item.cantidad)
                </td>
            </tr>
        }

    </table>
</div>

