@model SimuladorTienda.Models.tbgastos

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Nuevo gasto</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <hr />
    <div class="form-group">
        <div class="col-md-4">
            <label for="nombre">Gasto</label>
            @Html.EditorFor(model => model.nombre, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.nombre, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-4">
            <label for="nombre">Monto</label>
            <input class="form-control text-box single-line" data-val="true" pattern="[0-9]+(,[0-9]{2})?" data-val-required="El campo monto es obligatorio." id="monto" name="monto" type="text" value="" />
            @Html.ValidationMessageFor(model => model.monto, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-4">
            <div class="row">
                <div class="col-md-6 text-center">
                    <input type="submit" value="Crear" class="btn btn-primary btn-block" />
                </div>
                <div class="col-md-6 text-center">
                    <a href="@Url.Action("Index")" class="btn btn-warning btn-block">
                        Cancelar
                    </a>
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

